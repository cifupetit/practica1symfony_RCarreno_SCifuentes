{% extends "::base.html.twig" %}
{% block stylesheets %}
{% endblock %}

{% block title %}Temporadas{% endblock %}

{% block body %}
<div style="text-align:center;">
	<h1 style="margin: 100px;">Temporadas disponibles de {{comp}}</h1>

		{% for partit in partits %}
			<button style="margin-bottom: 2%; width: 50%;" type="button" class="btn btn-info" ><a style="text-decoration:none;color:white;" href="{{ path('partidos' ,{'competicio': partit.competicio, 'temporada': partit.temporada}) }}">Temporada {{partit.temporada}}</button></a><br>

		{% else %}
		
			<div class="alert alert-danger" role="alert">No se han encontrado temporadas disponibles en {{comp}}</div>
		
		{% endfor %}
	
<button class="btn btn-info""><a style="text-decoration:none;color:white;" href="{{ path('competiciones')}}">Competiciones</a></button>
</div>
{% endblock %}
